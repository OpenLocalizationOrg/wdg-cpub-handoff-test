					<data id="id4">**</data>
				</originalData>
				<segment state="initial">
					<source>The tab/pivot navigation pattern is built using the <pc dataRefEnd="id2" dataRefStart="id1" id="p1"><pc dataRefEnd="id4" dataRefStart="id3" id="p2">Pivot</pc></pc> control.</source>
				</segment>
			</unit>
