			<unit id="101" translate="yes">
				<segment state="initial">
					<source>A semantic zoom control allows the user to zoom between two different semantic views of the same data set.</source>
				</segment>
			</unit>
			<unit id="102" translate="yes">
				<segment state="initial">
					<source>Semantic zoom</source>
				</segment>
			</unit>
