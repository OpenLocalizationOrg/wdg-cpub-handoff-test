				<originalData>
					<data id="id1">**</data>
					<data id="id2">**</data>
				</originalData>
				<segment state="initial">
					<source>Hold the <pc dataRefEnd="id2" dataRefStart="id1" id="p1">Volume Up</pc> button until the Surface logo is displayed, which indicates that the device has begun to boot.</source>
				</segment>
			</unit>
