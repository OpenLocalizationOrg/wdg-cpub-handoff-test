					<data id="id2">**</data>
					<data id="id3">&amp;nbsp;&amp;nbsp;</data>
				</originalData>
				<segment state="initial">
					<source><pc dataRefEnd="id2" dataRefStart="id1" id="p1">Note:</pc><ph dataRef="id3" id="ph1" />Surface Pro 3, Surface 3, Surface Pro 2, Surface 2, Surface Pro, and Surface do not use the Surface UEFI and instead use firmware provided by third-party manufacturers, such as AMI.</source>
				</segment>
			</unit>
			<unit id="109" translate="yes">
				<originalData>
					<data id="id1">**</data>
					<data id="id2">**</data>
					<data id="id3">**</data>
					<data id="id4">**</data>
				</originalData>
				<segment state="initial">
					<source>You can enter the Surface UEFI settings on your Surface device by pressing the <pc dataRefEnd="id2" dataRefStart="id1" id="p1">Volume Up</pc> button and the <pc dataRefEnd="id4" dataRefStart="id3" id="p2">Power</pc> button simultaneously.</source>
				</segment>
			</unit>
